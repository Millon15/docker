FROM alpine

ENTRYPOINT printf '\e[93m' \
    && echo '        :::      ::::::::' \
    && echo '      :+:      :+:    :+:' \
    && echo '    +:+ +:+         +:+  ' \
    && echo '  +#+  +:+       +#+     ' \
    && echo '+#+#+#+#+#+   +#+        ' \
    && echo '     #+#    #+#          ' \
    && echo '    ###   ########       ' \
    && printf '\e[0m' && sleep 3 && exit

# docker build -t 42 02_bonus/01
# docker run 42
